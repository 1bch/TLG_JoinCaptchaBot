#!/usr/bin/env bash

PID=`ps -aux | grep -e "[j]oin_captcha_bot.py" | awk 'FNR == 1 {print $2}'`

if [ -z "$PID" ]; then
    echo "Script is not running."
    exit 1
fi

# Kill twice (first SIGTERM signal to stop the Bot and second one to stop our code)
echo "Killing script, please wait..."
kill $PID
sleep 1
kill $PID
while $(kill -0 $PID 2>/dev/null); do
    sleep 1
done
./status

exit 0
